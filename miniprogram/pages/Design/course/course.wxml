 <image src='https://i.loli.net/2019/02/23/5c70f7d942c4b.jpeg' style='width:100%;height:80rpx'></image>
<view style='width:100%;height:100%;text-align:center;' >
<view class='card-top'>
  {{courseTitle}} ￥{{coursePrice}}
  <view class='card-box'>
  上课时间：
  <view class='text-sec'>{{time}}</view>
  </view>
  <view class='card-box'>
  课程内容：
  <view class='text-sec'>{{courseContent}}</view>
  </view>
  <view class='card-box'>
  教师介绍：
  <view class='text-sec'>{{teacherIntro}}</view>
  </view>
</view>
<button class='btn3' bindtap='getPay'>加入课程</button>
<button class='btn3' bindtap='getMall'>图书购买</button>
</view>
